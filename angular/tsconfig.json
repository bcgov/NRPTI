{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "useDefineForClassFields": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "paths": {
      "nrpti-angular-components": [
        "./dist/nrpti-angular-components"
      ],
      "nrpti-angular-components/*": [
        "./dist/nrpti-angular-components/*"
      ],
      "@angular/*": [
        // Necessary during development for libraries when using `yarn link` to reference local unpublished packages:
        // resolves issue of missing peerDependencies, which don't get installed when using the package this way.
        "node_modules/@angular/*"
      ]
    }
  }
}
