{
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7
  },
  "env": {
    "es6": true,
    "node": true,
    "mongo": true,
    "mocha": true,
    "jest": true,
    "jasmine": true
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
    "no-var": "error",
    "id-length": ["error", { "min": 2, "exceptions": ["_"] }]
  }
}
